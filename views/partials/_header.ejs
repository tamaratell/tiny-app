<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup"
      style="display:flex; align-items:center; justify-content: space-between">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div style="display:flex; align-items:center; justify-content: space-between">
        <% if (username) { %>
          <p style="padding-top: 0.6em; color: white">
            Logged in as: <%= username %>
          </p>
          <form class="form-inline" action="/logout" method="POST">
            <button type="submit" class="btn btn-primary" style="margin: 1em;">Logout</button>
          </form>
          <%} %>
            <% if(!username) {%>
              <form class="form-inline" action="/login" method="POST">
                <div class="form-group mb-2">
                  <input class="form-control" type="text" name="username" placeholder="username"
                    style="width: 200px; margin: 1em" />
                  <button type="submit" class="btn btn-primary">Login</button>
                </div>
              </form>
              <%} %>
      </div>
    </div>
  </nav>
</header>